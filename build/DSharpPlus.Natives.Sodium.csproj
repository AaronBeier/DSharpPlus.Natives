<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Provides the dynamic library files for sodium.</Description>
    <PackageTags>discord, discord-bot, discord-api, dsharpplus, libsodium</PackageTags>
    <Authors>libsodium contributors</Authors>
    <IsPackable>true</IsPackable>
    <PackageLicenseFile>sodium-license.txt</PackageLicenseFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="../lib/libsodium/**/*" Pack="true" PackagePath="runtimes" />
    <None Include="../licenses/sodium-license.txt" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>